                <Ellipse Name="ellipse8"  Stretch="UniformToFill" Margin="5,5,5,5" ></Ellipse>
                <Label Name="label8" VerticalAlignment="Center"   Content="prova" HorizontalAlignment="Center"/>
            </StackPanel>
        </CheckBox>

        <CheckBox Name="checkbox9" Selector.IsSelected="True" Grid.Column="4" Grid.Row="1" HorizontalAlignment="Left" Height="115" Margin="11,30,0,0" VerticalAlignment="Top" Width="100">
            <StackPanel Orientation="Vertical">
                <Ellipse Name="ellipse9"  Stretch="UniformToFill" Margin="5,5,5,5" ></Ellipse>
                <Label Name="label9" VerticalAlignment="Bottom"   Content="prova" HorizontalAlignment="Center"/>
            </StackPanel>
        </CheckBox>
        <Button x:Name="button_invia" Content="Invia" Grid.Column="4" Margin="26,168,10,-36" Grid.Row="1" Click="button_Click"/>
        <Button x:Name="button_annulla" Content="Annulla" Grid.Column="3" Margin="11,168,24,-36" Grid.Row="1" Click="button_Click"/>
        <Label x:Name="label" Content="Scegli con chi condividere:" HorizontalAlignment="Left" Margin="-3,-45,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="235" FontFamily="Nirmala UI Semilight" FontSize="18"/>



    </Grid>
</Window>
