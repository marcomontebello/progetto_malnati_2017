                <Ellipse Name="ellipse3"  Stretch="UniformToFill" Margin="5,5,5,5" ></Ellipse>
                <Label Name="label3" VerticalAlignment="Center"  Content="prova" HorizontalAlignment="Center"/>
            </StackPanel>
        </CheckBox>
        <CheckBox Name="checkbox4" Selector.IsSelected="True" Grid.Column="4" Grid.Row="0" HorizontalAlignment="Left" Height="115" Margin="11,30,0,0" VerticalAlignment="Top" Width="100">
            <StackPanel Orientation="Vertical">
                <Ellipse Name="ellipse4"  Stretch="UniformToFill" Margin="5,5,5,5" ></Ellipse>
                <Label Name="label4" VerticalAlignment="Center" Content="prova" HorizontalAlignment="Center" />
            </StackPanel>
        </CheckBox>
        <CheckBox Name="checkbox5" Selector.IsSelected="True" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Left" Height="115" Margin="11,30,0,0" VerticalAlignment="Top" Width="100">
            <StackPanel Orientation="Vertical">
                <Ellipse Name="ellipse5"  Stretch="UniformToFill" Margin="5,5,5,5" ></Ellipse>
                <Label Name="label5" VerticalAlignment="Center"   Content="prova" HorizontalAlignment="Center"/>
            </StackPanel>
        </CheckBox>
        <CheckBox Name="checkbox6" Selector.IsSelected="True" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Height="115" Margin="11,30,0,0" VerticalAlignment="Top" Width="100">
            <StackPanel Orientation="Vertical">
                <Ellipse Name="ellipse6"  Stretch="UniformToFill" Margin="5,5,5,5" ></Ellipse>
                <Label Name="label6" VerticalAlignment="Center"   Content="prova" HorizontalAlignment="Center"/>
            </StackPanel>
        </CheckBox>
        <CheckBox Name="checkbox7" Selector.IsSelected="True" Grid.Column="2" Grid.Row="1" HorizontalAlignment="Left" Height="115" Margin="11,30,0,0" VerticalAlignment="Top" Width="100">
