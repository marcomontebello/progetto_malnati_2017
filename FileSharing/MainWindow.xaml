                <Ellipse Name="ellipse1"  Stretch="UniformToFill" Margin="5,5,5,5" ></Ellipse>
                <Label Name="label1" VerticalAlignment="Center"   Content="prova" HorizontalAlignment="Center"/>
            </StackPanel>
        </CheckBox>
        <CheckBox Name="checkbox2" Selector.IsSelected="True" Grid.Column="2" Grid.Row="0" HorizontalAlignment="Left" Height="115" Margin="11,30,0,0" VerticalAlignment="Top" Width="100" Checked="checkbox2_Checked">
