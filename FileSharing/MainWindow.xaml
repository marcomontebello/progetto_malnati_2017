                <Ellipse Name="ellipse2"  Stretch="UniformToFill" Margin="5,5,5,5" ></Ellipse>
                <Label Name="label2" VerticalAlignment="Center" Content="prova" HorizontalAlignment="Center"/>
            </StackPanel>
        </CheckBox>
        <CheckBox Name="checkbox3" Selector.IsSelected="True" Grid.Column="3" Grid.Row="0" HorizontalAlignment="Left" Height="115" Margin="11,30,0,0" VerticalAlignment="Top" Width="100">
